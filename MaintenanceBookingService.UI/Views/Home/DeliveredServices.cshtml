@{
    ViewBag.Title = "Delivered Services";
}
@section styles{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.15/datatables.min.css" />
}

@section scripts {
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.15/datatables.min.js"></script>

    <script src="~/Scripts/Utilities/APIManager.js"></script>
    <script src="~/Scripts/Utilities/LoadingWheelManager.js"></script>
    <script src="~/Scripts/Utilities/TableManager.js"></script>
    <script src="~/Scripts/ViewManagers/ServiceRequest.js"></script>
    <script src="~/Scripts/ViewManagers/DeliveredRequestsViewManager.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        appRoot = '@Url.Content("~/")';
        approvedRequestsViewManager = DeliveredRequestsViewManager(
            TableContainerIdDetails("DeliveredServicesLoadingWheel",
                "DeliveredServicesContainer",
                "DeliveredServicesTable"),
            "ApproveRequestTableButton");

        approvedRequestsViewManager.DisplayAllDeliveredRequests();
    });
    </script>
}

<div class="col-md-12">
    <h2>Delivered Services</h2>
    <div id="DeliveredServicesLoadingWheel"></div>
    <div id="DeliveredServicesContainer">
        <table id="DeliveredServicesTable" class="display table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Required Service</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>